<Window x:Class="Chess.ChangeTheme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Theme" Height="300" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <ComboBox Name="themeBox" HorizontalAlignment="Left" Height="25" Margin="36,55,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_Changed"/>
        <Label Content="Choose Theme" HorizontalAlignment="Left" Height="28" Margin="36,20,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Preview" HorizontalAlignment="Right" Height="28" Margin="0,20,36,0" VerticalAlignment="Top" Width="80"/>
        <Image Name="previewBox" Height="80" Margin="0,55,36,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="80"/>
        <Button x:Name="okBtn" Content="OK" HorizontalAlignment="Left" Height="30" Margin="36,200,0,0" VerticalAlignment="Top" Width="104" IsDefault="True" Click="okBtn_Click"/>
        <Button x:Name="cancelBtn" Content="Cancel" Height="30" Margin="0,200,36,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="108" IsCancel="True" Click="cancelBtn_Click"/>
    </Grid>
</Window>
